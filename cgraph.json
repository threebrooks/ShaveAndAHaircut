{
  "window":
  {
    "verbose": "false",
    "type": "Window",
    "low_latency": "false",
    "sampling_frequency": "$(SAMPLE_RATE)",
    "analysis_frame_size": "$(ENERGY_WINDOW_SIZE_MS)",
    "analysis_frame_step_size": "$(ENERGY_WINDOW_STEP_SIZE_MS)",
    "windowing_function": "rectangle",
    "inputs":
    {
      "conversation_state": "4mic_convstate",
      "streamed_audio": "audio_preproc_0"
    },
    "outputs":
    {
      "windowed_audio": "window"
    }
  },
  "chunk_energy":
  {
    "verbose": "false",
    "dB_energy": "false",
    "type": "Energy",
    "inputs":
    {
      "windowed_audio": "window",
      "conversation_state": "4mic_convstate"
    },
    "outputs":
    {
      "features": "audio_chunk_energy"
    }
  },
  "energy_writer": 
  {
    "verbose": "false",
    "type": "FileWriter",
    "control_type": "single_on_startup",
    "input_type": "features",
    "npz_file": "energy.npz",
    "inputs": 
    {
      "input_stream": "audio_chunk_energy",
      "conversation_state": "4mic_convstate"
    }
  }
}
